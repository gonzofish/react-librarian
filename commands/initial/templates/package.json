{
  "name": "{{ name }}",
  "version": "{{ version }}",
  "description": "{{ readmeTitle }} -- A React Library",
  "main": "{{ packageName }}.es5.js",
  "module": "{{ name }}.es5.js",
  "jsnext:main": "{{ name }}.js",
  "es2015": "{{ name }}.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "node ./tasks/build",
    "g": "node ./node_modules/react-librarian",
    "lint": "tslint ./src/**/*.{ts,tsx}",
    "posttagVersion": "npm run build && npm publish dist",
    "prebuild": "rimraf dist out-tsc",
    "tagVersion": "np --no-publish",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "start": "webpack-dev-server --config configs/webpack.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "^2.8.6",
    "@types/jest": "^20.0.7",
    "@types/react": "^16.0.3",
    "@types/react-dom": "^15.5.4",
    "awesome-typescript-loader": "^3.2.3",
    "enzyme": "^2.9.1",
    "fs-extra": "^4.0.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "np": "^2.0.0",
    "react-librarian": "{{ librarianVersion }}",
    "react-test-renderer": "^15.6.1",
    "rollup": "^0.48.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
